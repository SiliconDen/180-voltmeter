#!/bin/sh

cd /home/argershm/180-voltmeter/Analog/cc
run_times=0
until [ $run_times -gt 1 ]
do
    ((run_times++))
    if [ $run_times -gt 1 ]
    then
        export SNPS_PW_SIM_SERVER_RERUN=1
        script_pgid=`ps -o pgid= $$ | grep -o '[0-9]*'`
        pid_with_same_pgid=`ps -eo pid,pgid | awk '$2 == "'$script_pgid'" { print $1 }'`
        echo $pid_with_same_pgid | grep -v $$ | xargs kill -9
    fi
    primewave -gui 0 -uniqueString 424077b79e1069eee7ab9d0dea0002dbd6c7980de498070fc2511cd128a4b2dec1cb7792ad947542abd5d320575340b383b46b2c7a0ed69d -python 0 -command "source /home/argershm/180-voltmeter/Analog/cc/synopsys_custom/sim_server/custom_compiler.argershm/stb.argershm.tb_main_opamp.schematic.session1/sim_server_init.tcl" -log /home/argershm/180-voltmeter/Analog/cc/synopsys_custom/primewave_session0_sim_server_job2 -libDefFile /home/argershm/180-voltmeter/Analog/cc/lib.defs >& /home/argershm/180-voltmeter/Analog/cc/synopsys_custom/primewave_session0_sim_server_job2.out && break
done
